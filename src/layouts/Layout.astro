---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Davide Mendolia - CTO & Head of Engineering with 20+ years scaling platforms from prototype to Series A. Expert in fintech, mobile architecture, team leadership, and platform scaling at topi, Karumi, Tuenti." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title}</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <!-- Prevent theme flash -->
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || 
                              (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            document.documentElement.setAttribute('data-theme', savedTheme);
        })();
    </script>
</head>
<body>
    <!-- Wave animation container -->
    <div id="wave-container" class="wave-container"></div>

    <slot />

    <script>
        // Theme management
        function initTheme() {
            const savedTheme = localStorage.getItem('theme') || 
                               (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            document.documentElement.setAttribute('data-theme', savedTheme);
            updateThemeToggle(savedTheme);
        }

        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeToggle(newTheme);
        }

        function updateThemeToggle(theme) {
            const navThemeToggle = document.getElementById('nav-theme-toggle');
            if (navThemeToggle) {
                navThemeToggle.setAttribute('data-theme', theme);
            }
        }

        // Initialize theme on page load
        initTheme();

        // Adjust hero section padding based on nav height
        function adjustHeroForNav() {
            const nav = document.querySelector('nav');
            const hero = document.querySelector('.hero');
            if (nav && hero) {
                const navHeight = nav.offsetHeight;
                hero.style.paddingTop = `${navHeight + 40}px`; // Add 40px buffer
            }
        }

        // Run on load and resize
        adjustHeroForNav();
        window.addEventListener('resize', adjustHeroForNav);

        // Add theme toggle listeners
        document.addEventListener('DOMContentLoaded', () => {
            const navThemeToggle = document.getElementById('nav-theme-toggle');
            
            if (navThemeToggle) {
                navThemeToggle.addEventListener('click', toggleTheme);
            }
        });

        // Listen for system theme changes
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
            if (!localStorage.getItem('theme')) {
                const newTheme = e.matches ? 'dark' : 'light';
                document.documentElement.setAttribute('data-theme', newTheme);
                updateThemeToggle(newTheme);
            }
        });

        // Wave animation management
        let waveAnimationActive = false;
        let animationFrameId = null;

        function initWaves() {
            const savedWaveState = localStorage.getItem('wavesEnabled') === 'true';
            if (savedWaveState) {
                enableWaves();
            }
            updateWavesToggle(savedWaveState);
        }

        function toggleWaves() {
            waveAnimationActive = !waveAnimationActive;

            if (waveAnimationActive) {
                enableWaves();
            } else {
                disableWaves();
            }

            localStorage.setItem('wavesEnabled', waveAnimationActive);
            updateWavesToggle(waveAnimationActive);
        }

        function enableWaves() {
            waveAnimationActive = true;
            const container = document.getElementById('wave-container');
            if (container) {
                container.classList.add('active');
                createWaves();
                animateWaves();
            }
        }

        function disableWaves() {
            waveAnimationActive = false;
            const container = document.getElementById('wave-container');
            if (container) {
                container.classList.remove('active');
                container.innerHTML = '';
            }
            if (animationFrameId) {
                cancelAnimationFrame(animationFrameId);
                animationFrameId = null;
            }
        }

        function updateWavesToggle(enabled) {
            const navWavesToggle = document.getElementById('nav-waves-toggle');
            if (navWavesToggle) {
                navWavesToggle.setAttribute('data-waves', enabled ? 'active' : 'inactive');
            }
        }

        function createWaves() {
            const container = document.getElementById('wave-container');
            if (!container) return;

            container.innerHTML = '';
            const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
            svg.setAttribute('viewBox', '0 0 400 200');
            svg.setAttribute('preserveAspectRatio', 'none');
            svg.style.width = '100%';
            svg.style.height = '100%';

            const numLayers = 4;

            for (let i = 0; i < numLayers; i++) {
                const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
                path.setAttribute('class', `wave-path wave-${i}`);
                svg.appendChild(path);
            }

            container.appendChild(svg);
        }

        function generateWavePath(yBase, amplitude, frequency, phase) {
            let d = 'M 0 200 ';
            const numPoints = 40; // Number of points along the wave
            for (let i = 0; i <= numPoints; i++) {
                const x = (i / numPoints) * 400; // Scale to viewBox width
                const normalizedX = i / numPoints; // 0 to 1
                const y = yBase + Math.sin(normalizedX * frequency * Math.PI * 2 + phase) * amplitude;
                d += `L ${x} ${y} `;
            }
            d += 'L 400 200 Z';
            return d;
        }

        function animateWaves() {
            if (!waveAnimationActive) return;

            const container = document.getElementById('wave-container');
            if (!container) return;

            const paths = container.querySelectorAll('path');
            const time = Date.now() * 0.001;

            paths.forEach((path, i) => {
                const yBase = 120 + i * 25;
                const amplitude = 15 + i * 5;
                const frequency = 2 + i * 0.5; // Number of wave cycles
                const phase = time * (0.3 + i * 0.1);

                path.setAttribute('d', generateWavePath(yBase, amplitude, frequency, phase));
            });

            animationFrameId = requestAnimationFrame(animateWaves);
        }

        // Initialize waves on page load
        initWaves();

        // Add waves toggle listeners
        document.addEventListener('DOMContentLoaded', () => {
            const navWavesToggle = document.getElementById('nav-waves-toggle');

            if (navWavesToggle) {
                navWavesToggle.addEventListener('click', toggleWaves);
            }
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Fade in animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        // Observe all fade-in elements
        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Add visible class to hero content immediately
        const heroContent = document.querySelector('.hero .fade-in');
        if (heroContent) {
            heroContent.classList.add('visible');
        }

        // Handle image loading states
        document.querySelectorAll('.prose img').forEach(img => {
            const imgElement = img as HTMLImageElement;
            if (imgElement.complete) {
                imgElement.classList.add('loaded');
            } else {
                imgElement.addEventListener('load', () => {
                    imgElement.classList.add('loaded');
                });
                imgElement.addEventListener('error', () => {
                    imgElement.classList.add('loaded');
                    // Optionally show error state
                });
            }
        });
    </script>
</body>

<style is:global>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Light theme (default) */
:root {
    --primary-color: #1a1a1a;
    --secondary-color: #333;
    --accent-color: #0066cc;
    --text-light: #666;
    --bg-light: #f8f9fa;
    --border-color: #e5e5e5;
    --bg-primary: #ffffff;
    --nav-bg: rgba(255, 255, 255, 0.95);
    --card-bg: #ffffff;
    --table-stripe: rgba(0,0,0,0.03);
    --table-hover: #f8f9fa;
    --shadow-color: rgba(0, 0, 0, 0.1);
    --shadow-hover: rgba(0, 0, 0, 0.15);
    --loading-bg: linear-gradient(90deg, #f8f9fa 25%, rgba(255,255,255,0.1) 50%, #f8f9fa 75%);
}

/* Dark theme */
[data-theme='dark'] {
    --primary-color: #ffffff;
    --secondary-color: #e0e0e0;
    --accent-color: #4da6ff;
    --text-light: #b0b0b0;
    --bg-light: #2a2a2a;
    --border-color: #404040;
    --bg-primary: #1a1a1a;
    --nav-bg: rgba(26, 26, 26, 0.95);
    --card-bg: #2a2a2a;
    --table-stripe: rgba(255,255,255,0.04);
    --table-hover: #222;
    --shadow-color: rgba(0, 0, 0, 0.3);
    --shadow-hover: rgba(0, 0, 0, 0.4);
    --loading-bg: linear-gradient(90deg, #2a2a2a 25%, rgba(255,255,255,0.05) 50%, #2a2a2a 75%);
}

body {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: var(--primary-color);
    background: var(--bg-primary);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Navigation */
nav {
    position: fixed;
    top: 0;
    width: 100%;
    background: var(--nav-bg);
    backdrop-filter: blur(10px);
    z-index: 1000;
    border-bottom: 1px solid var(--border-color);
}

.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    gap: 2rem;
}

.nav-theme-toggle {
    width: 40px;
    height: 40px;
    border: none;
    border-radius: 50%;
    background: var(--card-bg);
    color: var(--primary-color);
    cursor: pointer;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
}

.nav-theme-toggle:hover {
    background: var(--bg-light);
    transform: scale(1.05);
}

.nav-theme-toggle .light-icon,
.nav-theme-toggle .dark-icon {
    position: absolute;
    transition: all 0.3s ease;
}

.nav-theme-toggle .light-icon {
    opacity: 1;
    transform: rotate(0deg);
}

.nav-theme-toggle .dark-icon {
    opacity: 0;
    transform: rotate(-90deg);
}

.nav-theme-toggle[data-theme='dark'] .light-icon {
    opacity: 0;
    transform: rotate(90deg);
}

.nav-theme-toggle[data-theme='dark'] .dark-icon {
    opacity: 1;
    transform: rotate(0deg);
}

.nav-waves-toggle {
    width: 40px;
    height: 40px;
    border: none;
    border-radius: 50%;
    background: var(--card-bg);
    color: var(--primary-color);
    cursor: pointer;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
}

.nav-waves-toggle:hover {
    background: var(--bg-light);
    transform: scale(1.05);
}

.nav-waves-toggle[data-waves='active'] {
    background: var(--accent-color);
    color: white;
    border-color: var(--accent-color);
}

.nav-waves-toggle[data-waves='active']:hover {
    background: #0056b3;
}

/* Wave animation container */
.wave-container {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 200px;
    pointer-events: none;
    z-index: 1;
    opacity: 0;
    transition: opacity 0.5s ease;
}

.wave-container.active {
    opacity: 1;
}

.wave-container svg {
    width: 100%;
    height: 100%;
}

/* Wave paths with theme-aware colors */
.wave-path {
    transition: fill 0.3s ease;
}

:root .wave-path.wave-0 {
    fill: rgba(60, 100, 140, 0.08);
}

:root .wave-path.wave-1 {
    fill: rgba(60, 100, 140, 0.10);
}

:root .wave-path.wave-2 {
    fill: rgba(60, 100, 140, 0.12);
}

:root .wave-path.wave-3 {
    fill: rgba(60, 100, 140, 0.14);
}

[data-theme='dark'] .wave-path.wave-0 {
    fill: rgba(70, 130, 180, 0.06);
}

[data-theme='dark'] .wave-path.wave-1 {
    fill: rgba(70, 130, 180, 0.08);
}

[data-theme='dark'] .wave-path.wave-2 {
    fill: rgba(70, 130, 180, 0.10);
}

[data-theme='dark'] .wave-path.wave-3 {
    fill: rgba(70, 130, 180, 0.12);
}

.logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-color);
    text-decoration: none;
}

.nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.nav-links a {
    text-decoration: none;
    color: var(--text-light);
    font-weight: 500;
    transition: color 0.3s ease;
}

.nav-links a:hover,
.nav-links a.active {
    color: var(--accent-color);
}

.nav-links a.active {
    font-weight: 600;
}

.nav-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

/* Hamburger button - hidden on desktop */
.nav-hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
}

.hamburger-bar {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--primary-color);
    border-radius: 2px;
    transition: transform 0.3s ease, opacity 0.3s ease;
    transform-origin: center;
}

.nav-hamburger.open .hamburger-bar:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
}

.nav-hamburger.open .hamburger-bar:nth-child(2) {
    opacity: 0;
}

.nav-hamburger.open .hamburger-bar:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
}

/* nav-menu wraps links + controls; behaves as flex row on desktop */
.nav-menu {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex: 1;
    justify-content: space-between;
}

/* Hero Section */
.hero {
    padding: 120px 0 60px;
    background: linear-gradient(135deg, var(--bg-light) 0%, var(--border-color) 100%);
    text-align: center;
    position: relative;
    overflow: hidden;
}

.hero-content h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--primary-color);
}

.hero .subtitle {
    font-size: 1.5rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
    font-weight: 400;
}

.hero .tagline {
    font-size: 1.25rem;
    color: var(--text-light);
    max-width: 800px;
    margin: 0 auto 3rem;
    line-height: 1.7;
}

.cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
}

.btn-primary {
    background: var(--accent-color);
    color: white;
}

.btn-primary:hover {
    background: #0056b3;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 102, 204, 0.3);
}

.btn-secondary {
    background: transparent;
    color: var(--accent-color);
    border-color: var(--accent-color);
}

.btn-secondary:hover {
    background: var(--accent-color);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 102, 204, 0.2);
}

/* Sections */
section {
    padding: 80px 0;
}

.section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--primary-color);
}

.section-subtitle {
    font-size: 1.125rem;
    color: var(--text-light);
    text-align: center;
    max-width: 600px;
    margin: 0 auto 4rem;
}

/* About Section */
.about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.about-text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-light);
}

.about-text strong {
    color: var(--primary-color);
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
}

.skill-category {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    transition: transform 0.3s ease;
}

.skill-category:hover {
    transform: translateY(-5px);
}

.skill-category h3 {
    color: var(--accent-color);
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.skill-category p {
    color: var(--text-light);
    font-size: 0.9rem;
    line-height: 1.5;
}

/* How I Help Section */
.help-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
}

.help-card {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    box-shadow: 0 4px 20px var(--shadow-color);
    transition: all 0.3s ease;
}

.help-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px var(--shadow-hover);
    border-color: var(--accent-color);
}

.help-card .icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--accent-color) 0%, #004a99 100%);
    color: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
}

.help-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 1rem;
}

.help-card p {
    color: var(--text-light);
    line-height: 1.7;
    font-size: 0.95rem;
}

/* Achievements Section */
.achievements {
    background: var(--bg-light);
}

.achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
}

.achievement-card {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 4px 20px var(--shadow-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid var(--border-color);
}

.achievement-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px var(--shadow-hover);
}

.achievement-card .icon {
    width: 50px;
    height: 50px;
    background: var(--accent-color);
    color: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin: 0 auto 1rem;
}

.achievement-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 1rem;
}

.achievement-card p {
    color: var(--text-light);
    line-height: 1.6;
}

/* Case Studies */
.case-studies-grid {
    display: grid;
    gap: 3rem;
}

.case-study {
    background: var(--card-bg);
    border-radius: 16px;
    padding: 2.5rem;
    border: 1px solid var(--border-color);
    box-shadow: 0 4px 20px var(--shadow-color);
}

.case-study-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.case-study-emoji {
    font-size: 2.5rem;
}

.case-study-header h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-color);
    margin: 0;
}

.case-study-meta {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
}

.case-study-meta > div {
    background: var(--bg-light);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
}

.case-study-meta h3 {
    color: var(--accent-color);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.case-study-meta p {
    color: var(--text-light);
    line-height: 1.6;
    font-size: 0.95rem;
}

/* Contact Section */
.contact {
    background: var(--bg-light);
}

.contact-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
}

.contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.25rem 2rem;
    background: var(--card-bg);
    color: var(--primary-color);
    text-decoration: none;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px var(--shadow-color);
}

.contact-link:hover {
    background: var(--accent-color);
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 102, 204, 0.3);
}

.contact-link i {
    font-size: 1.25rem;
}

/* Footer */
footer {
    background: var(--secondary-color);
    color: var(--bg-primary);
    text-align: center;
    padding: 2rem 0;
}

footer p {
    color: var(--bg-light);
}

/* Responsive Design */
@media (max-width: 768px) {
    .hero-content h1 {
        font-size: 2.5rem;
    }
    
    .hero .subtitle {
        font-size: 1.25rem;
    }
    
    .hero .tagline {
        font-size: 1.125rem;
    }
    
    .about-content {
        grid-template-columns: 1fr;
        text-align: center;
    }
    
    .skills-grid {
        grid-template-columns: 1fr;
    }
    
    .help-grid {
        grid-template-columns: 1fr;
    }

    .achievements-grid {
        grid-template-columns: 1fr;
    }

    .case-study-meta {
        grid-template-columns: 1fr;
    }
    
    .contact-links {
        flex-direction: column;
