---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Davide Mendolia - CTO & Head of Engineering with 20+ years scaling platforms from prototype to Series A. Expert in fintech, mobile architecture, team leadership, and platform scaling at topi, Karumi, Tuenti." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title}</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <!-- Prevent theme flash -->
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || 
                              (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            document.documentElement.setAttribute('data-theme', savedTheme);
        })();
    </script>
</head>
<body>
    <!-- Theme Toggle Button -->
    <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
        <i class="fas fa-sun light-icon"></i>
        <i class="fas fa-moon dark-icon"></i>
    </button>
    
    <slot />
    
    <script>
        // Theme management
        function initTheme() {
            const savedTheme = localStorage.getItem('theme') || 
                               (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            document.documentElement.setAttribute('data-theme', savedTheme);
            updateThemeToggle(savedTheme);
        }

        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeToggle(newTheme);
        }

        function updateThemeToggle(theme) {
            const toggles = [
                document.getElementById('theme-toggle'),
                document.getElementById('nav-theme-toggle')
            ];
            
            toggles.forEach(toggle => {
                if (toggle) {
                    toggle.setAttribute('data-theme', theme);
                }
            });
        }

        // Initialize theme on page load
        initTheme();

        // Add theme toggle listeners
        document.addEventListener('DOMContentLoaded', () => {
            const themeToggle = document.getElementById('theme-toggle');
            const navThemeToggle = document.getElementById('nav-theme-toggle');
            
            if (themeToggle) {
                themeToggle.addEventListener('click', toggleTheme);
            }
            
            if (navThemeToggle) {
                navThemeToggle.addEventListener('click', toggleTheme);
            }
        });

        // Listen for system theme changes
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
            if (!localStorage.getItem('theme')) {
                const newTheme = e.matches ? 'dark' : 'light';
                document.documentElement.setAttribute('data-theme', newTheme);
                updateThemeToggle(newTheme);
            }
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Fade in animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        // Observe all fade-in elements
        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Add visible class to hero content immediately
        const heroContent = document.querySelector('.hero .fade-in');
        if (heroContent) {
            heroContent.classList.add('visible');
        }

        // Handle image loading states
        document.querySelectorAll('.prose img').forEach(img => {
            const imgElement = img as HTMLImageElement;
            if (imgElement.complete) {
                imgElement.classList.add('loaded');
            } else {
                imgElement.addEventListener('load', () => {
                    imgElement.classList.add('loaded');
                });
                imgElement.addEventListener('error', () => {
                    imgElement.classList.add('loaded');
                    // Optionally show error state
                });
            }
        });
    </script>
</body>

<style is:global>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Light theme (default) */
:root {
    --primary-color: #1a1a1a;
    --secondary-color: #333;
    --accent-color: #0066cc;
    --text-light: #666;
    --bg-light: #f8f9fa;
    --border-color: #e5e5e5;
    --bg-primary: #ffffff;
    --nav-bg: rgba(255, 255, 255, 0.95);
    --card-bg: #ffffff;
    --table-stripe: rgba(0,0,0,0.03);
    --table-hover: #f8f9fa;
    --shadow-color: rgba(0, 0, 0, 0.1);
    --shadow-hover: rgba(0, 0, 0, 0.15);
    --loading-bg: linear-gradient(90deg, #f8f9fa 25%, rgba(255,255,255,0.1) 50%, #f8f9fa 75%);
}

/* Dark theme */
[data-theme='dark'] {
    --primary-color: #ffffff;
    --secondary-color: #e0e0e0;
    --accent-color: #4da6ff;
    --text-light: #b0b0b0;
    --bg-light: #2a2a2a;
    --border-color: #404040;
    --bg-primary: #1a1a1a;
    --nav-bg: rgba(26, 26, 26, 0.95);
    --card-bg: #2a2a2a;
    --table-stripe: rgba(255,255,255,0.04);
    --table-hover: #222;
    --shadow-color: rgba(0, 0, 0, 0.3);
    --shadow-hover: rgba(0, 0, 0, 0.4);
    --loading-bg: linear-gradient(90deg, #2a2a2a 25%, rgba(255,255,255,0.05) 50%, #2a2a2a 75%);
}

/* Theme Toggle Button */
.theme-toggle {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 1001;
    width: 50px;
    height: 50px;
    border: none;
    border-radius: 50%;
    background: var(--card-bg);
    color: var(--primary-color);
    cursor: pointer;
    box-shadow: 0 4px 12px var(--shadow-color);
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    backdrop-filter: blur(10px);
}

.theme-toggle:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px var(--shadow-hover);
}

.theme-toggle .light-icon,
.theme-toggle .dark-icon {
    position: absolute;
    transition: all 0.3s ease;
}

/* Show appropriate icon based on current theme */
.theme-toggle .light-icon {
    opacity: 1;
    transform: rotate(0deg);
}

.theme-toggle .dark-icon {
    opacity: 0;
    transform: rotate(-90deg);
}

.theme-toggle[data-theme='dark'] .light-icon {
    opacity: 0;
    transform: rotate(90deg);
}

.theme-toggle[data-theme='dark'] .dark-icon {
    opacity: 1;
    transform: rotate(0deg);
}

body {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: var(--primary-color);
    background: var(--bg-primary);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Navigation */
nav {
    position: fixed;
    top: 0;
    width: 100%;
    background: var(--nav-bg);
    backdrop-filter: blur(10px);
    z-index: 1000;
    border-bottom: 1px solid var(--border-color);
}

.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
}

.nav-theme-toggle {
    width: 40px;
    height: 40px;
    border: none;
    border-radius: 50%;
    background: var(--card-bg);
    color: var(--primary-color);
    cursor: pointer;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    margin-left: 1rem;
}

.nav-theme-toggle:hover {
    background: var(--bg-light);
    transform: scale(1.05);
}

.nav-theme-toggle .light-icon,
.nav-theme-toggle .dark-icon {
    position: absolute;
    transition: all 0.3s ease;
}

.nav-theme-toggle .light-icon {
    opacity: 1;
    transform: rotate(0deg);
}

.nav-theme-toggle .dark-icon {
    opacity: 0;
    transform: rotate(-90deg);
}

.nav-theme-toggle[data-theme='dark'] .light-icon {
    opacity: 0;
    transform: rotate(90deg);
}

.nav-theme-toggle[data-theme='dark'] .dark-icon {
    opacity: 1;
    transform: rotate(0deg);
}

.logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-color);
    text-decoration: none;
}

.nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.nav-links a {
    text-decoration: none;
    color: var(--text-light);
    font-weight: 500;
    transition: color 0.3s ease;
}

.nav-links a:hover,
.nav-links a.active {
    color: var(--accent-color);
}

.nav-links a.active {
    font-weight: 600;
}

/* Hero Section */
.hero {
    padding: 120px 0 60px;
    background: linear-gradient(135deg, var(--bg-light) 0%, var(--border-color) 100%);
    text-align: center;
    position: relative;
    overflow: hidden;
}

.hero-content h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--primary-color);
}

.hero .subtitle {
    font-size: 1.5rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
    font-weight: 400;
}

.hero .tagline {
    font-size: 1.25rem;
    color: var(--text-light);
    max-width: 800px;
    margin: 0 auto 3rem;
    line-height: 1.7;
}

.cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
}

.btn-primary {
    background: var(--accent-color);
    color: white;
}

.btn-primary:hover {
    background: #0056b3;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 102, 204, 0.3);
}

.btn-secondary {
    background: transparent;
    color: var(--accent-color);
    border-color: var(--accent-color);
}

.btn-secondary:hover {
    background: var(--accent-color);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 102, 204, 0.2);
}

/* Sections */
section {
    padding: 80px 0;
}

.section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--primary-color);
}

.section-subtitle {
    font-size: 1.125rem;
    color: var(--text-light);
    text-align: center;
    max-width: 600px;
    margin: 0 auto 4rem;
}

/* About Section */
.about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.about-text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-light);
}

.about-text strong {
    color: var(--primary-color);
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
}

.skill-category {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    transition: transform 0.3s ease;
}

.skill-category:hover {
    transform: translateY(-5px);
}

.skill-category h3 {
    color: var(--accent-color);
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.skill-category p {
    color: var(--text-light);
    font-size: 0.9rem;
    line-height: 1.5;
}

/* Achievements Section */
.achievements {
    background: var(--bg-light);
}

.achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
}

.achievement-card {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 4px 20px var(--shadow-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid var(--border-color);
}

.achievement-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px var(--shadow-hover);
}

.achievement-card .icon {
    width: 50px;
    height: 50px;
    background: var(--accent-color);
    color: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin: 0 auto 1rem;
}

.achievement-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 1rem;
}

.achievement-card p {
    color: var(--text-light);
    line-height: 1.6;
}

/* Case Studies */
.case-studies-grid {
    display: grid;
    gap: 3rem;
}

.case-study {
    background: var(--card-bg);
    border-radius: 16px;
    padding: 2.5rem;
    border: 1px solid var(--border-color);
    box-shadow: 0 4px 20px var(--shadow-color);
}

.case-study-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.case-study-emoji {
    font-size: 2.5rem;
}

.case-study-header h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-color);
    margin: 0;
}

.case-study-meta {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
}

.case-study-meta > div {
    background: var(--bg-light);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
}

.case-study-meta h3 {
    color: var(--accent-color);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.case-study-meta p {
    color: var(--text-light);
    line-height: 1.6;
    font-size: 0.95rem;
}

/* Contact Section */
.contact {
    background: var(--bg-light);
}

.contact-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
}

.contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.25rem 2rem;
    background: var(--card-bg);
    color: var(--primary-color);
    text-decoration: none;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px var(--shadow-color);
}

.contact-link:hover {
    background: var(--accent-color);
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 102, 204, 0.3);
}

.contact-link i {
    font-size: 1.25rem;
}

/* Footer */
footer {
    background: var(--secondary-color);
    color: var(--bg-primary);
    text-align: center;
    padding: 2rem 0;
}

footer p {
    color: var(--bg-light);
}

/* Responsive Design */
@media (max-width: 768px) {
    .hero-content h1 {
        font-size: 2.5rem;
    }
    
    .hero .subtitle {
        font-size: 1.25rem;
    }
    
    .hero .tagline {
        font-size: 1.125rem;
    }
    
    .about-content {
        grid-template-columns: 1fr;
        text-align: center;
    }
    
    .skills-grid {
        grid-template-columns: 1fr;
    }
    
    .achievements-grid {
        grid-template-columns: 1fr;
    }
    
    .case-study-meta {
        grid-template-columns: 1fr;
    }
    
    .contact-links {
        flex-direction: column;
        align-items: center;
    }
    
    .cta-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .nav-container {
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    .nav-links {
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .theme-toggle {
        top: 10px;
        right: 10px;
        width: 45px;
        height: 45px;
    }
    
    .nav-theme-toggle {
        width: 35px;
        height: 35px;
        font-size: 0.9rem;
    }
}

/* Smooth scrolling */
html {
    scroll-behavior: smooth;
}

/* Animation for scroll-in elements */
.fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
}

.fade-in.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Markdown Tables */
main table, .prose table, article table {
  width: 100%;
  border-collapse: collapse;
  margin: 2rem 0;
  font-size: 0.95rem;
  line-height: 1.4;
  overflow: hidden;
  border: 1px solid var(--border-color);
  background: var(--card-bg);
  border-radius: 10px;
  table-layout: fixed;
}

/* Balanced column widths */
.prose table th:nth-child(1),
.prose table td:nth-child(1) { width: 22%; }
.prose table th:nth-child(2),
.prose table td:nth-child(2) { width: 12%; }
.prose table th:nth-child(3),
.prose table td:nth-child(3) { width: 20%; }
.prose table th:nth-child(4),
.prose table td:nth-child(4) { width: 46%; }

/* Image loading states */
.prose img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  margin: 2rem 0;
  display: block;
  background: var(--loading-bg);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  min-height: 200px;
  position: relative;
}

.prose img::before {
  content: "Loading image...";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: var(--text-light);
  font-size: 0.9rem;
  font-weight: 500;
  pointer-events: none;
  opacity: 1;
  transition: opacity 0.3s ease;
}

.prose img[src*=".gif"]::before {
  content: "Loading animation...";
}

.prose img:not([loading="lazy"])::before,
.prose img[complete]::before {
  opacity: 0;
}

@keyframes loading {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* Hide loading animation once image is loaded */
.prose img.loaded {
  background: none;
  animation: none;
}

.prose img.loaded::before {
  display: none;
}

/* Specific image sizing */
.prose img[src*="openapi-lamps"] {
  width: 80%;
  max-width: 80%;
  margin: 2rem auto;
}

.prose table thead tr {
    background: linear-gradient(135deg, var(--accent-color) 0%, #004a99 100%);
    color: #fff;
    text-align: left;
}

.prose table th,
.prose table td {
    padding: 0.75rem 1rem;
    border-right: 1px solid var(--border-color);
    vertical-align: top;
}

.prose table th:last-child,
.prose table td:last-child {
    border-right: none;
}

.prose table tbody tr {
    border-top: 1px solid var(--border-color);
    transition: background 0.25s ease;
}

.prose table tbody tr:nth-child(even) {
    background: var(--table-stripe);
}

.prose table tbody tr:hover {
    background: var(--table-hover);
}

.prose table th {
    font-weight: 600;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
    text-transform: uppercase;
}

.prose table td {
    font-weight: 400;
}

/* Responsive table: add horizontal scroll on small screens */
.prose table {
    display: block;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
}

.prose table::-webkit-scrollbar {
    height: 8px;
}
.prose table::-webkit-scrollbar-track {
    background: transparent;
}
.prose table::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 4px;
}

@media (max-width: 640px) {
    .prose table th,
    .prose table td {
        padding: 0.6rem 0.75rem;
        font-size: 0.8rem;
    }
}
</style>
</html>